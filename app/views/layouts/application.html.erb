        </li>
        <li class="nav-item active">
          <%= link_to("Contacto", {controller: "welcome", action: "contacto"}, class: "nav-link") %>
        </li>
        <li class="nav-item active">
          <%= link_to("Tareas", tareas_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <%= link_to("Nueva Tarea", new_tarea_path, class: "nav-link") %>
        </li>
        <% if usuario_signed_in? %>
          <li class="nav-item">
            <%= link_to("Logout", destroy_usuario_session_path, method: :delete, class: "nav-link") %>
          </li>
        <% else %>
