<% if usuario_signed_in? %>
  <h1>Bienvenido <%= current_usuario.email %></h1>
<% end %>
<h1>Lista de Tareas</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <th>Titulo</th>
    <th>Descripcion</th>
    <th colspan="3">Acciones</th>
  </thead>
  <% @tareas.each do |tarea| %>
    <tr>
      <td><%= tarea.titulo %></td>
      <td><%= tarea.description %></td>
      <td><%= link_to "Ver", tarea_path(tarea) %></td>
      <td><%= link_to "Editar", edit_tarea_path(tarea) %></td>
      <td><%= link_to "Eliminar", tarea, method: :delete, data: {confirm: "Estas seguro?"} %></td>
    </tr>
  <% end -%>
</table>
